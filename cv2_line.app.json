{
    "info": {
        "name": "cv2_line",
        "version": "1.0.0",
        "category": "cv2",
        "keywords": ["cv2"],
        "homepage": "https://answer.bogonets.com/",
        "bugs": "https://answer.bogonets.com/",
        "license": "Bogonet License",
        "author": "zer0",
        "dependencies": [
            {"type": "pip", "src": "numpy"},
            {"type": "pip", "src": "opencv-python"}
        ],
        "engines": ">=1.0.2",
        "environment": {
            "type": "pyenv",
            "name": "cv2"
        },
        "titles": {
            "en": "cv2.line",
            "ko": "cv2.line"
        },
        "descriptions": {
            "en": "Draws a line segment connecting two points.",
            "ko": "두 점을 연결하는 선분을 그린다."
        },
        "documentation_mime": "text",
        "documentations": {},
        "meta": {}
    },
    "controls": {
        "input": ["source", "lines"],
        "output": "result"
    },
    "props": [
        {
            "rule": "read_and_write",
            "name": "color",
            "default_value": "0,0,0",
            "type": "color",
            "required": true,
            "valid": {},
            "title": {
                "en": "Line color",
                "ko": "Line color"
            },
            "help": {
                "en": "Line color.",
                "ko": "선분의 색상."
            }
        },
        {
            "rule": "read_and_write",
            "name": "thickness",
            "default_value": "1",
            "type": "int",
            "required": true,
            "valid": {},
            "title": {
                "en": "Line thickness",
                "ko": "Line thickness"
            },
            "help": {
                "en": "Line thickness.",
                "ko": "선분의 두께."
            }
        },
        {
            "rule": "read_and_write",
            "name": "line_type",
            "default_value": "8",
            "type": "str",
            "required": true,
            "valid": {
                "list": "4;8;AA"
            },
            "title": {
                "en": "Line Type",
                "ko": "Line Type"
            },
            "help": {
                "en": "Type of the line.",
                "ko": "선분의 종류."
            }
        },
        {
            "rule": "read_and_write",
            "name": "shift",
            "default_value": "0",
            "type": "int",
            "required": true,
            "valid": {},
            "title": {
                "en": "Shift",
                "ko": "Shift"
            },
            "help": {
                "en": "Number of fractional bits in the point coordinates.",
                "ko": "점 좌표의 소수 비트 수."
            }
        }
    ]
}
